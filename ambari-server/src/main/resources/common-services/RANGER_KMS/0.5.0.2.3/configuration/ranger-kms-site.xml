    <name>ranger.contextName</name>
    <value>/kms</value>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>xa.webapp.dir</name>
    <value>./webapp</value>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>ranger.service.https.attrib.ssl.enabled</name>
    <value>false</value>

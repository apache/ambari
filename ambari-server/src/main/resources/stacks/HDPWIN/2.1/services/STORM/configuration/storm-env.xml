<configuration supports_adding_forbidden="true">
  <property>
    <name>storm_user</name>
    <deleted>true</deleted>
    <on-ambari-upgrade add="false"/>
  </property>
  <property>
    <name>storm_log_dir</name>
    <display-name>Storm Log directory</display-name>
    <value>c:\hadoop\logs\storm</value>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>storm_pid_dir</name>
    <display-name>Storm PID directory</display-name>
    <value>c:\hadoop\run\storm</value>
    <on-ambari-upgrade add="true"/>
  </property>
  <!-- storm-env.cmd -->
  <property>
    <name>content</name>
    <value/>
    <value-attributes>
      <type>content</type>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>
</configuration>

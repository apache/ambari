{{view.hostName}}
<div class="host-elements">
  {{#if view.isObjectsList}}
    <table>
      {{#each view.items}}
        <tr>
          <td>{{name}}</td>
          <td>{{status}}</td>
        </tr>
      {{/each}}
    </table>
  {{else}}
    <ul class="unstyled">
      {{#each item in view.items}}
        <li>{{item}}</li>
      {{/each}}
    </ul>
  {{/if}}
</div>

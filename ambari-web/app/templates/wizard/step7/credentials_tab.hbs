<p class="step-description">{{t installer.step7.credentialsTab.body}}</p>

<table class="table credentials-table">
  <thead>
  <tr>
    <td></td>
    <td>{{t common.username}}<span class="red">*</span></td>
    <td>
      <div class="row">
        <div class="col-md-6">
          {{t common.password}}<span class="red">*</span>
        </div>
        <div class="col-md-6">
          {{t common.confirm.password}}<span class="red">*</span>
        </div>
      </div>
    </td>
  </tr>
  </thead>
  <tbody>
    {{#each row in view.rows}}
      <tr>
        <td class="account-title">{{row.displayName}}</td>
        <td>
          {{#if row.usernameProperty}}
            <div {{bindAttr class="row.usernameProperty.errorMessage:has-error"}}>
              {{view row.usernameProperty.viewClass serviceConfigBinding="row.usernameProperty"}}
            </div>
          {{else}}
            N/A
          {{/if}}
        </td>
        <td>
          {{#if row.passwordProperty}}
            <div {{bindAttr class="row.passwordProperty.errorMessage:has-error"}}>
              {{view row.passwordProperty.viewClass serviceConfigBinding="row.passwordProperty"}}
            </div>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
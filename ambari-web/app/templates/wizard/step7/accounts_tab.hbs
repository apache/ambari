<div class="col-md-7">
  <p class="step-description">{{t installer.step7.accountsTab.body}}</p>
  <div class="use-ambari-checkboxes">
    {{#each checkbox in view.checkboxes}}
      <div>
        {{view checkbox.viewClass serviceConfigBinding="checkbox" labelBinding="checkbox.displayName"}}
      </div>
    {{/each}}
  </div>
  <table class="table accounts-table">
    <thead>
    <tr>
      <td class="username-col">{{t installer.step7.credentialsTab.usersGroups}}</td>
      <td>{{t installer.step7.credentialsTab.usernames}}</td>
    </tr>
    </thead>
    <tbody>
    {{#each property in view.properties}}
      <tr>
        <td class="account-title">{{property.displayName}}</td>
        <td>
          <div {{bindAttr class="property.errorMessage:has-error"}}>
            {{view property.viewClass serviceConfigBinding="property" fullWidth=true isPopoverEnabled="false"}}
          </div>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>
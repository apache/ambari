<div class="option">
  <div class="option-title">
    <p>
      {{service.displayName}} 
      <select {{action changeVersion on="change" target="view"}}>
        {{#each ver in service.versions}}
          <option {{bindAttr value="ver.id" selected="ver.displayed"}}>{{ver.version}}</option>
        {{/each}}
      </select>
    </p>
    <p>{{service.displayedVersion.mpackVersion.mpack.displayName}}&nbsp;{{service.displayedVersion.mpackVersion.version}}</p>
  </div>
  <div class="option-description">{{service.description}}</div>
  {{#if service.displayedVersion.selected}}
    <button class="btn btn-default option-add-button checked disabled"></button>
  {{else}}
    <button class="btn btn-default option-add-button" {{action add target="view"}}></button>
  {{/if}}
</div>

<div class="option">
  <div class="option-title">
    {{usecase.displayName}}&nbsp;<span class="glyphicon glyphicon-question-sign"></span>
  </div>
  <div class="option-description">{{usecase.description}}</div>
  {{#if usecase.selected}}
  <button class="btn btn-default option-add-button checked" {{action toggle target="view"}}></button>
  {{else}}
  <button class="btn btn-default option-add-button" {{action toggle target="view"}}></button>
  {{/if}}
</div>

<a class="close" {{action close target="view"}}>&times;</a>
<div id="start-upgrade-plan">
  <h3>{{t admin.serviceGroups.startUpgradePlan.title}}</h3>
  <p id="description">{{t admin.serviceGroups.startUpgradePlan.description}}</p>
  <ol class="upgrade-steps">
    <li>
      <h4>{{t admin.serviceGroups.upgradePlan}}</h4>
      <p>{{t admin.serviceGroups.startUpgradePlan.upgradePlanDescription}}</p>
    </li>
    <li>
      <h4>{{t common.prerequisites}}</h4>
      <p>{{t admin.serviceGroups.startUpgradePlan.prerequisitesDescription}}</p>
    </li>
    <li>
      <h4>{{t common.install}}</h4>
      <p>{{t admin.serviceGroups.startUpgradePlan.installDescription}}</p>
    </li>
    <li>
      <h4>{{t common.upgrade}}</h4>
      <p>{{t admin.serviceGroups.startUpgradePlan.upgradeDescription}}</p>
    </li>
  </ol>
  <button type="button" class="btn-lg btn-primary" {{action createUpgradePlan target="view"}}>{{t admin.serviceGroups.startUpgradePlan.buttonLabel}}</button>
</div>
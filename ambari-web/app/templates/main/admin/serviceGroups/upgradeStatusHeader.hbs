<div id="upgrade-status-header">
  <ol class="upgrade-steps">
    <li class="complete">
      <h4>{{t admin.serviceGroups.upgradePlan}}</h4>
    </li>
    <li {{bindAttr class="view.isPrerequisitesActive:active view.isPrerequisitesComplete:complete"}}>
      <h4>{{t common.prerequisites}}</h4>
    </li>
    <li {{bindAttr class="view.isInstallActive:active view.isInstallComplete:complete"}}>
      <h4>{{t common.install}}</h4>
    </li>
    <li {{bindAttr class="view.isUpgradeActive:active"}}>
      <h4>{{t common.upgrade}}</h4>
    </li>
  </ol>
  <button class="btn btn-secondary" {{action handleNextStep target="view"}}>{{view.label}}</button>
</div>
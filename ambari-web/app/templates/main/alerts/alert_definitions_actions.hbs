<button class="btn btn-success dropdown-toggle" data-toggle="dropdown" href="#">{{t common.actions}} <span class="caret"></span></button>
<ul class="dropdown-menu pull-left">
  {{#each action in controller}}
    <li>
      <a href="#" {{action actionHandler action target="controller"}}>
        <span {{bindAttr class="action.icon"}}></span>
        {{action.title}}
      </a>
    </li>
    {{#if action.showDivider}}
      <li class="divider"></li>
    {{/if}}
  {{/each}}
</ul>
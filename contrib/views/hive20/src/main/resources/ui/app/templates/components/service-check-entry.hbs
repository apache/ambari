<p>
  {{#fa-stack size="lg" as |s|}}
    {{s.stack-2x "circle-thin"}}
    {{s.stack-1x iconName}}
  {{/fa-stack}}
  <strong>{{label}}</strong>
</p>


{{#if error}}
  <p>
    <strong>Message: </strong>{{error.message}}
    <a href="#" class="btn btn-sm btn-warning"{{action "toggleError"}}>
      {{#if errorExpanded}}
        {{fa-icon 'chevron-up'}} Show less
      {{else}}
        {{fa-icon 'chevron-down'}} Show more
      {{/if}}
    </a>
  </p>


  {{#if errorExpanded}}
    <p>
      <pre>{{error.trace}}</pre>
    </p>
  {{/if}}
{{/if}}

